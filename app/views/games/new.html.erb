
<div class="container d-flex justify-content-center p-2 mt-3">

  <ul class="grille">

    <% @grille.each do |letter| %>
    <li class="border justify-content-center p-2 me-2">
    <%= letter %>
    </li>
    <% end %>

  </ul>
</div>

<div class="container d-flex justify-content-center p-2 mt-3">
  <form action="/score" method="post" data-turbo="false">
    <input type="text" class="form-control mb-1" name="word" value="<%= params[:word] %>">
    <input class="btn btn-primary" type="submit" value="Guess">
    <%# <input id="token" name="token" type="hidden" value="VUBJKB23UIVI1UU1VOBVI@" /> %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grille, @grille %>
  </form>
</div>
